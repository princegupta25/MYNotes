<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp">


        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/viewPriority"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/red_dot"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:maxLines="1"
                    android:id="@+id/notesTitle"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/notesSubtitle"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="5dp"
                    android:text=" jhdbchdc c hc hc c c  chsdchsd cd cbcuibcldbyv hbwfwfhfogerfewoufborewbforefheruogrehberhbfoerbferbfberfbreifboiefbeirobferyfdv fv vf y fv"
                    android:textColor="#D8D8D8"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_marginTop="10dp"
                    android:id="@+id/notesDate"
                    android:maxLines="1"
                    android:text=" 9 April 2022"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>